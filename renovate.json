{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":pinAllExceptPeerDependencies",
    ":enablePreCommit",
    "group:allNonMajor"
  ],
  "timezone": "Asia/Shanghai",
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin"],
      "automerge": true
    }
  ],
  "schedule": ["every weekend"]
}
